<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <HBox>
        <ListView fx:id="itemListView" prefWidth="400" />
        <VBox spacing="10" style="-fx-padding: 10;">
            <Button fx:id="addItemBtn" onAction="#addItem" text="Add Item" />
            <Button fx:id="deleteItemBtn" onAction="#deleteItem" text="Delete Item" />
        </VBox>
    </HBox>
</VBox>
